{% extends 'base.html.twig' %}


{% block title %}
	{{ parent() }}
	| Organisation
{% endblock %}
{# La page organisation bureau #}
{% block body %}

	<div class="container bureau_main">
		<!-- Affichage de la photo d'accueil de la page -->
		{% if photoIntro is not empty %}
			<figure class="textcenter">
				<img src="{{ asset('photo-intro/'~ photoIntro) }}" alt="Organisation de l'association Vélo Rando Nature Bruz">
				<figcaption class="fig">Organisation</figcaption>
			</figure>
		{% else %}
			<h1 class="titreEnTete"></h1>
		{% endif %}
	</div>
	<!-- Modif en tant qu'admin de la photo d'accueil -->
	<div class="col-lg-12">
		{% if is_granted("ROLE_ADMIN") %}
			<div class="boutonModifierTexte">
				<button class="button_show btn btn-outline-success">Modifier la photo</button>
			</div>
			<div class="form-group formulaire" id="form">
				{{ form(formPhotoIntro) }}
					<div class="mt-3 mb-5 text-center">
						{# <p>{{ form_widget(formPhotoIntro.Enregistrer) }}</p> #}
						<button class="button_close btn btn-outline-secondary">Annuler</button>
					</div>
				</div>
			{% endif %}
		</div>

		<div class="container">
			<div class="carte col-2 offset-5">
				<div class="carte-entete membresBureau">

					<!-- On boucle sur l'entité User -->
					{% for user in users %}

						{# Si il s'agit du Referent Président il s'affiche ici #}
						{% if user.referents.getNom() == 'Président' %}

							<!-- On affiche la qualité référent -->
							<p class="role_user">{{ user.referents.getNom() }}</p>
						</div>
						<div class="card-body ">
							<!-- On affiche les nom et prénom -->
							<p class="nomPrenom">{{user.prenom}}&nbsp</p>
							<p class="nomPrenom">{{user.nom}}</p>
						</div>
					{% endif %}
				{% endfor %}
			</div>

			<div class=" col-2 mb-2 offset-5">
				<div class="carte-entete membresBureau">
					{% for user in users %}
						{# Si il s'agit du Referent Vice Président il s'affiche ici #}
						{% if user.referents.getNom() == 'Vice Président' %}
							<p class="role_user">{{ user.referents.getNom() }}</p>
						</div>
						<div class="card-body">
							<p class="nomPrenom">{{user.prenom}}&nbsp</p>
							<p class="nomPrenom">{{user.nom}}</p>
						</div>
					{% endif %}
				{% endfor %}
			</div>

			<div class="boxLigneRef1">
				<div class=" col-2">
					<div class="carte-entete membresBureau">
						{% for user in users %}
							{# Si il s'agit du Referent Trésorier il s'affiche ici #}
							{% if user.referents.getNom() == 'Trésorier' %}
								<p class="role_user">{{ user.referents.getNom() }}</p>
							</div>
							<div class="card-body">
								<p class="nomPrenom">{{user.prenom}}&nbsp</p>
								<p class="nomPrenom">{{user.nom}}</p>
							</div>
						{% endif %}
					{% endfor %}
				</div>

				<div class=" col-2 mb-2 o">
					<div class="carte-entete membresBureau">
						{% for user in users %}
							{# Si il s'agit du Referent Vice Trésorier il s'affiche ici #}
							{% if user.referents.getNom() == 'Vice-Trésorier' %}
								<p class="role_user">{{ user.referents.getNom() }}</p>
							</div>
							<div class="card-body">
								<p class="nomPrenom">{{user.prenom}}&nbsp</p>
								<p class="nomPrenom">{{user.nom}}</p>
							</div>
						{% endif %}
					{% endfor %}
				</div>

				<div class=" col-2 offset-3 ">
					<div class="carte-entete membresBureau">
						{% for user in users %}
							{# Si il s'agit du Referent Secrétaire il s'affiche ici #}
							{% if user.referents.getNom() == 'Secrétaire' %}
								<p class="role_user">{{ user.referents.getNom() }}</p>
							</div>
							<div class="card-body">
								<p class="nomPrenom">{{user.prenom}}&nbsp</p>
								<p class="nomPrenom">{{user.nom}}</p>
							</div>
						{% endif %}
					{% endfor %}
				</div>

				<div class=" col-2 mb-2">
					<div class="carte-entete membresBureau">
						{% for user in users %}
							{# Si il s'agit du Referent Vice-Secrétaire il s'affiche ici #}
							{% if user.referents.getNom() == 'Vice-Secrétaire' %}
								<p class="role_user">{{ user.referents.getNom() }}</p>
							</div>
							<div class="card-body">
								<p class="nomPrenom">{{user.prenom}}&nbsp</p>
								<p class="nomPrenom">{{user.nom}}</p>
							</div>
						{% endif %}
					{% endfor %}
				</div>
			</div>


			<div class="EDBloc mt-5 col-10 m-auto">
				<p class="text-center">
					Equipe de Développement :</p>
				<div
					class="equipeDeveloppement ">
					<!-- Les noms des personnes ayant participé au développement du site sont en dur
					            pour qu'ils restent affichés même en cas de suppression du profil par l'admin -->
					<ul class="margin-bottom d-flex flex-row m-l-5">
						<li class="margin-right">Florian BARON</li>
						<li class="margin-right">Nathalie NOËL - LE ROSCOUET</li>
						<li class="margin-right">Maxime THUAULT</li>
						<li class="margin-right">Florence CORMANT</li>
						<li class="margin-right">Christophe LECLERE</li>
						<li class="margin-right">Antoine MARTIN VAUFREY</li>
					</ul>
				</div>
			</div>

			{% block carousel%}{% endblock %}


			{% block scripts %}

				<link rel="stylesheet" href="{{ asset('css/association/style.css') }}"/>
				<link rel="stylesheet" href="{{ asset('css/association/orgchart.css') }}"/>
				{% block JQuery %}{% endblock %}
				<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
				<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">

				<script src="{{ asset('js/jquery.orgchart.js') }}"></script>

			{% endblock %}

		{% endblock %}
